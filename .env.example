# Browser-Use Local Deployment Environment Variables
# Copy to .env and configure for your local deployment

# AI API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Database Configuration (if using PostgreSQL)
POSTGRES_PASSWORD=browseruse_local_password
DATABASE_URL=postgresql://browseruse:browseruse_local_password@postgres:5432/browseruse

# Redis Configuration
REDIS_PASSWORD=browseruse_redis_password

# Security Settings
LOCAL_SECRETS_ENCRYPTION_KEY=your_local_secrets_encryption_key_here
JWT_SECRET=your_jwt_secret_for_local_deployment

# Monitoring
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=200h

# Browser-Use Specific Settings
BROWSER_USE_HEADLESS=false
BROWSER_USE_SANDBOX=false
BROWSER_USE_DEBUG=false
BROWSER_USE_LOG_LEVEL=INFO

# Local Deployment Flags
LOCAL_DEPLOYMENT=true
LOCAL_DATA_DIRECTORY=/data
BYTEBOT_INTEGRATION=true

# VNC Access (for browser visualization)
VNC_PASSWORD=browseruse

# Chrome/Chromium Settings
CHROME_EXECUTABLE_PATH=/usr/bin/chromium-browser
CHROME_DEBUG_PORT=9222

# Service Ports (modify if conflicts exist)
BROWSER_USE_PORT=9242
CDP_PORT=9222
VNC_PORT=5900
POSTGRES_PORT=5433
REDIS_PORT=6380
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000